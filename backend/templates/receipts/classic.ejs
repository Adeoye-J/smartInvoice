<!-- templates/receipts/classic.ejs -->
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Receipt <%= receipt.receiptNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    /* CSS variables driven by Settings.branding.primaryColor (or colors fallback) */
    :root {
      --brand: <%= (typeof brandColor !== 'undefined' && brandColor) ? brandColor : ((colors && colors.primary) ? colors.primary : '#1e40af') %>;
      --brand-dark: <%= (colors && colors.primaryDark) ? colors.primaryDark : '#1e293b' %>;
      --brand-darker: <%= (colors && colors.primaryDarker) ? colors.primaryDarker : '#0f172a' %>;
      --brand-lighter: <%= (colors && colors.primaryLighter) ? colors.primaryLighter : '#f8fafc' %>;
      --brand-pale: <%= (colors && colors.primaryPale) ? colors.primaryPale : '#f8fafc' %>;
    }

    body { 
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #1e293b;
      line-height: 1.4;
      padding: 20px;
      background: #fff;
      font-size: 11px;
    }
    
    .container { 
      max-width: 750px; 
      margin: 0 auto;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-bottom: 20px;
      border-bottom: 2px solid var(--brand);
      margin-bottom: 25px;
    }
    
    .logo-section {
      display: flex;
      align-items: flex-start;
      gap: 12px;
    }
    
    .logo {
      width: 60px;
      height: 60px;
      object-fit: contain;
    }
    
    .company-info h1 {
      font-size: 18px;
      color: var(--brand-darker);
      font-weight: 700;
      margin-bottom: 4px;
    }
    
    .company-info p {
      color: #64748b;
      font-size: 10px;
      line-height: 1.5;
    }
    
    .receipt-info {
      text-align: right;
      background: var(--brand-lighter);
      padding: 12px 16px;
      border-radius: 6px;
      min-width: 180px;
    }
    
    .receipt-info .label {
      font-size: 9px;
      text-transform: uppercase;
      color: var(--brand-darker);
      font-weight: 600;
      letter-spacing: 1px;
    }
    
    .receipt-info .number {
      font-size: 16px;
      color: <%= colors.primaryDarker %>;
      font-weight: 700;
      margin: 4px 0;
    }
    
    .receipt-info .date {
      font-size: 10px;
      color: #475569;
      margin-top: 6px;
    }
    
    .paid-badge {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 9px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-top: 6px;
      background: #d1fae5;
      color: #065f46;
    }
    
    .parties {
      display: flex;
      justify-content: space-between;
      margin-bottom: 25px;
    }
    
    .party {
      flex: 1;
      max-width: 48%;
    }
    
    .party-title {
      font-size: 9px;
      text-transform: uppercase;
      color: var(--brand);
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }
    
    .party-name {
      font-size: 12px;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 4px;
    }
    
    .party-details {
      font-size: 10px;
      color: #475569;
      line-height: 1.5;
    }
    
    .payment-info {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      padding: 12px 16px;
      background: var(--brand-pale);
      border-radius: 4px;
      border-left: 4px solid #10b981;
    }
    
    .payment-item {
      flex: 1;
    }
    
    .payment-label {
      font-size: 9px;
      text-transform: uppercase;
      color: #94a3b8;
      font-weight: 600;
      letter-spacing: 0.5px;
      margin-bottom: 3px;
    }
    
    .payment-value {
      font-size: 10px;
      color: #0f172a;
      font-weight: 600;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    
    thead {
      background: var(--brand-darker);
      color: white;
    }
    
    thead th {
      padding: 10px 8px;
      text-align: left;
      font-size: 9px;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    
    thead th.right { text-align: right; }
    thead th.center { text-align: center; }
    
    tbody tr {
      border-bottom: 1px solid #e2e8f0;
    }
    
    tbody td {
      padding: 10px 8px;
      font-size: 10px;
      color: #0f172a;
    }
    
    tbody td.right { text-align: right; font-weight: 500; }
    tbody td.center { text-align: center; }
    
    .totals {
      display: flex;
      justify-content: flex-end;
      margin-top: 15px;
    }
    
    .totals-box {
      width: 240px;
      background: #f8fafc;
      padding: 12px 16px;
      border-radius: 6px;
    }
    
    .total-row {
      display: flex;
      justify-content: space-between;
      padding: 6px 0;
      font-size: 10px;
      color: #475569;
    }
    
    .total-row.final {
      border-top: 2px solid var(--brand);
      margin-top: 8px;
      padding-top: 10px;
      font-size: 14px;
      font-weight: 700;
      color: var(--brand-darker);
    }

    .amount-paid {
      background: #d1fae5;
      padding: 12px 16px;
      border-radius: 6px;
      border-left: 4px solid #10b981;
      margin-top: 15px;
      text-align: center;
    }

    .amount-paid .label {
      font-size: 9px;
      text-transform: uppercase;
      color: #065f46;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 4px;
    }

    .amount-paid .amount {
      font-size: 24px;
      font-weight: 900;
      color: #059669;
    }
    
    .notes {
      margin-top: 25px;
      padding: 12px 16px;
      background: var(--brand-lighter);
      border-left: 3px solid var(--brand);
      border-radius: 3px;
    }
    
    .notes-title {
      font-size: 9px;
      text-transform: uppercase;
      color: var(--brand-darker);
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 6px;
    }
    
    .notes-content {
      font-size: 10px;
      color: #475569;
      line-height: 1.5;
    }

    .footer {
      margin-top: 30px;
      padding-top: 20px;
      border-top: 1px solid #e2e8f0;
      text-align: center;
      font-size: 10px;
      color: #94a3b8;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo-section">
        <% if (businessLogo) { %>
          <img src="<%= businessLogo %>" alt="Logo" class="logo" />
        <% } %>
        <div class="company-info">
          <h1><%= receipt.billFrom?.businessName || 'Your Business' %></h1>
          <p>
            <%= receipt.billFrom?.address || '' %><br/>
            <%= receipt.billFrom?.email || '' %><br/>
            <%= receipt.billFrom?.phone || '' %>
          </p>
        </div>
      </div>
      
      <div class="receipt-info">
        <div class="label">Payment Receipt</div>
        <div class="number">#<%= receipt.receiptNumber %></div>
        <div class="date">Date: <%= new Date(receipt.receiptDate).toLocaleDateString() %></div>
        <div class="paid-badge">PAID</div>
      </div>
    </div>

    <div class="parties">
      <div class="party">
        <div class="party-title">Received From</div>
        <div class="party-name"><%= receipt.billTo?.clientName || '' %></div>
        <div class="party-details">
          <%= receipt.billTo?.address || '' %><br/>
          <%= receipt.billTo?.email || '' %><br/>
          <%= receipt.billTo?.phone || '' %>
        </div>
      </div>
    </div>

    <div class="payment-info">
      <div class="payment-item">
        <div class="payment-label">Payment Method</div>
        <div class="payment-value"><%= receipt.paymentMethod %></div>
      </div>
      
      <div class="payment-item">
        <div class="payment-label">Payment Date</div>
        <div class="payment-value"><%= new Date(receipt.paymentDate).toLocaleDateString() %></div>
      </div>
      
      <% if (receipt.transactionId) { %>
        <div class="payment-item">
          <div class="payment-label">Transaction ID</div>
          <div class="payment-value"><%= receipt.transactionId %></div>
        </div>
      <% } %>
    </div>

    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th class="center">Qty</th>
          <th class="right">Unit Price</th>
          <th class="right">Amount</th>
        </tr>
      </thead>
      <tbody>
        <% (receipt.items || []).forEach(function(item){ %>
          <tr>
            <td><%= item.name %></td>
            <td class="center"><%= item.quantity %></td>
            <td class="right">$<%= Number(item.unitPrice || 0).toFixed(2) %></td>
            <td class="right">$<%= Number(item.total || 0).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="totals">
      <div class="totals-box">
        <div class="total-row">
          <span>Subtotal</span>
          <span>$<%= Number(receipt.subTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row">
          <span>Tax</span>
          <span>$<%= Number(receipt.taxTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row final">
          <span>Total</span>
          <span>$<%= Number(receipt.total||0).toFixed(2) %></span>
        </div>
      </div>
    </div>

    <div class="amount-paid">
      <div class="label">Amount Paid</div>
      <div class="amount">$<%= Number(receipt.amountPaid||0).toFixed(2) %></div>
    </div>

    <% if (receipt.notes) { %>
      <div class="notes">
        <div class="notes-title">Notes</div>
        <div class="notes-content"><%= receipt.notes %></div>
      </div>
    <% } %>

    <div class="footer">
      Thank you for your payment!<br/>
      This is an official receipt for your records.
    </div>
  </div>
</body>
</html>