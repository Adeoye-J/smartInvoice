<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Receipt <%= receipt.receiptNumber %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    /* CSS variables driven by Settings.branding.primaryColor (or colors fallback) */
    :root {
      --brand: <%= (typeof brandColor !== 'undefined' && brandColor) ? brandColor : ((colors && colors.primary) ? colors.primary : '#1d4ed8') %>;
      --brand-dark: <%= (colors && colors.primaryDark) ? colors.primaryDark : '#1e3a8a' %>;
      --brand-darker: <%= (colors && colors.primaryDarker) ? colors.primaryDarker : '#1e40af' %>;
      --brand-light: <%= (colors && colors.primaryLight) ? colors.primaryLight : 'rgba(29,78,216,0.85)' %>;
      --brand-lighter: <%= (colors && colors.primaryLighter) ? colors.primaryLighter : '#93c5fd' %>;
      --brand-pale: <%= (colors && colors.primaryPale) ? colors.primaryPale : '#f8fafc' %>;
      --text: <%= (colors && colors.text) ? colors.text : '#1e293b' %>;
      --text-medium: <%= (colors && colors.textMedium) ? colors.textMedium : '#475569' %>;
      --bg: <%= (colors && colors.bg) ? colors.bg : 'white' %>;
      --border: <%= (colors && colors.border) ? colors.border : '#e2e8f0' %>;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body { 
      font-family: 'Arial', 'Helvetica', sans-serif;
      color: var(--text);
      background: var(--bg);
      padding: 20px;
      font-size: 10px;
      line-height: 1.4;
    }
    
    .container { 
      max-width: 750px; 
      margin: 0 auto;
      border: 2px solid var(--brand);
    }
    
    .header {
      background: var(--brand);
      color: white;
      padding: 20px 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo-section {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .logo-wrapper {
      width: 55px;
      height: 55px;
      background: white;
      border-radius: 4px;
      padding: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .logo {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }
    
    .company h1 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 3px;
      letter-spacing: 0.5px;
    }
    
    .company p {
      font-size: 9px;
      opacity: 0.95;
      line-height: 1.4;
    }
    
    .receipt-header {
      text-align: right;
    }
    
    .receipt-type {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 700;
      margin-bottom: 4px;
    }
    
    .receipt-number {
      font-size: 22px;
      font-weight: 900;
      margin-bottom: 6px;
    }
    
    .status {
      display: inline-block;
      padding: 4px 10px;
      background: rgba(255,255,255,0.25);
      border-radius: 3px;
      font-size: 9px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .content {
      padding: 25px;
    }
    
    .dates-bar {
      display: flex;
      background: var(--brand-pale);
      border: 1px solid var(--brand-lighter);
      margin-bottom: 25px;
    }
    
    .date-box {
      flex: 1;
      padding: 12px 15px;
      border-right: 1px solid var(--brand-lighter);
    }
    
    .date-box:last-child {
      border-right: none;
    }
    
    .date-label {
      font-size: 9px;
      text-transform: uppercase;
      color: #64748b;
      font-weight: 700;
      letter-spacing: 0.5px;
      margin-bottom: 4px;
    }
    
    .date-value {
      font-size: 11px;
      color: #0f172a;
      font-weight: 700;
    }
    
    .billing-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      margin-bottom: 25px;
      padding-bottom: 20px;
      border-bottom: 2px solid var(--brand);
    }
    
    .billing-box h3 {
      font-size: 9px;
      text-transform: uppercase;
      color: white;
      background: var(--brand-dark);
      padding: 6px 10px;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 12px;
    }
    
    .billing-name {
      font-size: 13px;
      font-weight: 700;
      color: #0f172a;
      margin-bottom: 6px;
    }
    
    .billing-details {
      font-size: 10px;
      color: #475569;
      line-height: 1.6;
    }

    .payment-info {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
      padding: 12px 16px;
      background: var(--brand-pale);
      border-radius: 4px;
      border-left: 4px solid #10b981;
    }
    
    .payment-item {
      flex: 1;
    }
    
    .payment-label {
      font-size: 9px;
      text-transform: uppercase;
      color: #94a3b8;
      font-weight: 600;
      letter-spacing: 0.5px;
      margin-bottom: 3px;
    }
    
    .payment-value {
      font-size: 10px;
      color: #0f172a;
      font-weight: 600;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
      border: 1px solid var(--brand-lighter);
    }
    
    thead {
      background: var(--brand-darker);
      color: white;
    }
    
    thead th {
      padding: 10px;
      text-align: left;
      font-size: 9px;
      text-transform: uppercase;
      font-weight: 700;
      letter-spacing: 0.5px;
      border-right: 1px solid var(--brand-light);
    }
    
    thead th:last-child {
      border-right: none;
    }
    
    thead th.right { text-align: right; }
    thead th.center { text-align: center; }
    
    tbody tr {
      border-bottom: 1px solid var(--brand-lighter);
    }
    
    tbody tr:last-child {
      border-bottom: none;
    }
    
    tbody td {
      padding: 10px;
      font-size: 10px;
      color: #0f172a;
      border-right: 1px solid var(--brand-lighter);
    }
    
    tbody td:last-child {
      border-right: none;
    }
    
    tbody td:first-child {
      font-weight: 600;
    }
    
    tbody td.right { text-align: right; font-weight: 600; }
    tbody td.center { text-align: center; }
    
    .summary {
      display: flex;
      justify-content: flex-end;
    }
    
    .summary-table {
      width: 280px;
      border: 2px solid var(--brand);
    }
    
    .summary-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 12px;
      font-size: 10px;
      border-bottom: 1px solid var(--brand-lighter);
    }
    
    .summary-row:last-child {
      border-bottom: none;
    }
    
    .summary-row.subtotal {
      background: var(--brand-pale);
      color: var(--text-medium);
      font-weight: 600;
    }
    
    .summary-row.tax {
      background: var(--brand-pale);
      color: var(--text-medium);
      font-weight: 600;
    }
    
    .summary-row.total {
      background: var(--brand);
      color: white;
      font-size: 14px;
      font-weight: 900;
      padding: 12px;
    }

    .amount-paid {
      background: #d1fae5;
      padding: 12px 16px;
      border-radius: 6px;
      border-left: 4px solid #10b981;
      margin-top: 15px;
      text-align: center;
    }

    .amount-paid .label {
      font-size: 9px;
      text-transform: uppercase;
      color: #065f46;
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 4px;
    }

    .amount-paid .amount {
      font-size: 24px;
      font-weight: 900;
      color: #059669;
    }
    
    .notes {
      margin-top: 25px;
      border: 1px solid var(--brand-lighter);
      background: var(--brand-pale);
    }
    
    .notes-header {
      background: var(--brand-dark);
      color: white;
      padding: 6px 12px;
      font-size: 9px;
      text-transform: uppercase;
      font-weight: 700;
      letter-spacing: 1px;
    }
    
    .notes-body {
      padding: 12px;
      font-size: 10px;
      color: var(--text-medium);
      line-height: 1.6;
    }
    
    .footer {
      margin-top: 25px;
      padding: 15px 25px;
      background: var(--brand-darker);
      color: white;
      text-align: center;
      font-size: 9px;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo-section">
        <% if (businessLogo) { %>
          <div class="logo-wrapper">
            <img src="<%= businessLogo %>" alt="Logo" class="logo" />
          </div>
        <% } %>
        <div class="company">
          <h1><%= receipt.billFrom?.businessName || 'Your Business' %></h1>
          <p>
            <%= receipt.billFrom?.address || '' %><br/>
            <%= receipt.billFrom?.email || '' %> | <%= receipt.billFrom?.phone || '' %>
          </p>
        </div>
      </div>
      
      <div class="receipt-header">
        <div class="receipt-type">Receipt</div>
        <div class="receipt-number">#<%= receipt.receiptNumber %></div>
        <div class="status">PAID</div>
      </div>
    </div>

    <div class="content">
      <div class="dates-bar">
        <div class="date-box">
          <div class="date-label">Receipt Date</div>
          <div class="date-value"><%= new Date(receipt.receiptDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
        
        <div class="date-box">
          <div class="date-label">Payment Date</div>
          <div class="date-value"><%= new Date(receipt.paymentDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
        
        <div class="date-box">
          <div class="date-label">Payment Method</div>
          <div class="date-value"><%= receipt.paymentMethod || 'Cash' %></div>
        </div>
      </div>

      <div class="billing-section">
        <div class="billing-box">
          <h3>Received From</h3>
          <div class="billing-name"><%= receipt.billTo?.clientName || '' %></div>
          <div class="billing-details">
            <%= receipt.billTo?.address || '' %><br/>
            <%= receipt.billTo?.email || '' %><br/>
            <%= receipt.billTo?.phone || '' %>
          </div>
        </div>
        
        <div class="billing-box">
          <h3>Received By</h3>
          <div class="billing-name"><%= receipt.billFrom?.businessName || '' %></div>
          <div class="billing-details">
            <%= receipt.billFrom?.address || '' %><br/>
            <%= receipt.billFrom?.email || '' %><br/>
            <%= receipt.billFrom?.phone || '' %>
          </div>
        </div>
      </div>

      <% if (receipt.transactionId) { %>
        <div class="payment-info">
          <div class="payment-item">
            <div class="payment-label">Transaction ID</div>
            <div class="payment-value"><%= receipt.transactionId %></div>
          </div>
        </div>
      <% } %>

      <table>
        <thead>
          <tr>
            <th>Description</th>
            <th class="center">Qty</th>
            <th class="right">Unit Price</th>
            <th class="right">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% (receipt.items || []).forEach(function(item){ %>
            <tr>
              <td><%= item.name %></td>
              <td class="center"><%= item.quantity %></td>
              <td class="right">$<%= Number(item.unitPrice || 0).toFixed(2) %></td>
              <td class="right">$<%= Number(item.total || 0).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="summary">
        <div class="summary-table">
          <div class="summary-row subtotal">
            <span>Subtotal</span>
            <span>$<%= Number(receipt.subTotal||0).toFixed(2) %></span>
          </div>
          <div class="summary-row tax">
            <span>Tax</span>
            <span>$<%= Number(receipt.taxTotal||0).toFixed(2) %></span>
          </div>
          <div class="summary-row total">
            <span>Total Paid</span>
            <span>$<%= Number(receipt.total||0).toFixed(2) %></span>
          </div>
        </div>
      </div>

      <div class="amount-paid">
        <div class="label">Amount Received</div>
        <div class="amount">$<%= Number(receipt.amountPaid||0).toFixed(2) %></div>
      </div>

      <% if (receipt.notes) { %>
        <div class="notes">
          <div class="notes-header">Important Notes</div>
          <div class="notes-body"><%= receipt.notes %></div>
        </div>
      <% } %>
    </div>

    <div class="footer">
      Thank You For Your Payment
    </div>
  </div>
</body>
</html>
