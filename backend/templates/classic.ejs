<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Invoice <%= invoice.invoiceNumber %></title>
  <style>
    :root {
      --primary: #1e40af;
      --primary-light: #3b82f6;
      --primary-lighter: #dbeafe;
      --primary-dark: #1e3a8a;
      --text-dark: #1e293b;
      --text-medium: #475569;
      --text-light: #94a3b8;
      --border: #e2e8f0;
    }
    
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body { 
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--text-dark);
      line-height: 1.6;
      /* padding: 40px 20px; */
      padding: 20px;
      background: #fff;
    }
    
    .container { 
      max-width: 800px; 
      margin: 0 auto;
      background: white;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-bottom: 30px;
      border-bottom: 3px solid var(--primary);
      margin-bottom: 40px;
    }
    
    .logo-section h1 {
      font-size: 28px;
      color: var(--primary-dark);
      font-weight: 700;
      margin-bottom: 8px;
    }
    
    .logo-section p {
      color: var(--text-medium);
      font-size: 14px;
      line-height: 1.5;
    }
    
    .invoice-info {
      text-align: right;
      background: var(--primary-lighter);
      padding: 20px;
      border-radius: 8px;
    }
    
    .invoice-info .label {
      font-size: 12px;
      text-transform: uppercase;
      color: var(--primary-dark);
      font-weight: 600;
      letter-spacing: 1px;
    }
    
    .invoice-info .number {
      font-size: 24px;
      color: var(--primary-dark);
      font-weight: 700;
      margin: 5px 0;
    }
    
    .invoice-info .date {
      font-size: 13px;
      color: var(--text-medium);
      margin-top: 8px;
    }
    
    .parties {
      display: flex;
      justify-content: space-between;
      margin-bottom: 40px;
    }
    
    .party {
      flex: 1;
      max-width: 48%;
    }
    
    .party-title {
      font-size: 11px;
      text-transform: uppercase;
      color: var(--primary);
      font-weight: 700;
      letter-spacing: 1.5px;
      margin-bottom: 12px;
    }
    
    .party-name {
      font-size: 16px;
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 6px;
    }
    
    .party-details {
      font-size: 13px;
      color: var(--text-medium);
      line-height: 1.6;
    }
    
    .dates-section {
      display: flex;
      gap: 30px;
      margin-bottom: 30px;
      padding: 20px;
      background: #f8fafc;
      border-radius: 6px;
    }
    
    .date-item {
      flex: 1;
    }
    
    .date-label {
      font-size: 11px;
      text-transform: uppercase;
      color: var(--text-light);
      font-weight: 600;
      letter-spacing: 1px;
      margin-bottom: 4px;
    }
    
    .date-value {
      font-size: 14px;
      color: var(--text-dark);
      font-weight: 500;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 30px;
    }
    
    thead {
      background: var(--primary-dark);
      color: white;
    }
    
    thead th {
      padding: 14px 12px;
      text-align: left;
      font-size: 12px;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.5px;
    }
    
    thead th.right { text-align: right; }
    thead th.center { text-align: center; }
    
    tbody tr {
      border-bottom: 1px solid var(--border);
    }
    
    tbody tr:hover {
      background: #f8fafc;
    }
    
    tbody td {
      padding: 16px 12px;
      font-size: 14px;
      color: var(--text-dark);
    }
    
    tbody td.right { text-align: right; font-weight: 500; }
    tbody td.center { text-align: center; }
    
    .totals {
      display: flex;
      justify-content: flex-end;
      margin-top: 20px;
    }
    
    .totals-box {
      width: 320px;
      background: #f8fafc;
      padding: 20px;
      border-radius: 8px;
    }
    
    .total-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      font-size: 14px;
      color: var(--text-medium);
    }
    
    .total-row.final {
      border-top: 2px solid var(--primary);
      margin-top: 10px;
      padding-top: 15px;
      font-size: 18px;
      font-weight: 700;
      color: var(--primary-dark);
    }
    
    .notes {
      margin-top: 40px;
      padding: 20px;
      background: var(--primary-lighter);
      border-left: 4px solid var(--primary);
      border-radius: 4px;
    }
    
    .notes-title {
      font-size: 12px;
      text-transform: uppercase;
      color: var(--primary-dark);
      font-weight: 700;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }
    
    .notes-content {
      font-size: 13px;
      color: var(--text-medium);
      line-height: 1.6;
    }
    
    .status-badge {
      display: inline-block;
      padding: 6px 14px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-top: 8px;
    }
    
    .status-paid {
      background: #d1fae5;
      color: #065f46;
    }
    
    .status-pending {
      background: #fef3c7;
      color: #92400e;
    }
    
    .status-overdue {
      background: #fee2e2;
      color: #991b1b;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="logo-section">
        <% if (businessLogo) { %>
            <img src="<%= businessLogo %>" alt="Logo" style="max-width: 80px; max-height: 80px; margin-bottom: 10px;" />
        <% } %>
        <h1><%= invoice.billFrom?.businessName || 'Your Business' %></h1>
        <!-- <h1><%= invoice.billFrom?.businessName || 'Your Business' %></h1> -->
        <p>
          <%= invoice.billFrom?.address || '' %><br/>
          <%= invoice.billFrom?.email || '' %><br/>
          <%= invoice.billFrom?.phone || '' %>
        </p>
      </div>
      
      <div class="invoice-info">
        <div class="label">Invoice</div>
        <div class="number">#<%= invoice.invoiceNumber %></div>
        <div class="date">Issued: <%= new Date(invoice.invoiceDate).toLocaleDateString() %></div>
        <div class="date">Due: <%= new Date(invoice.dueDate).toLocaleDateString() %></div>
        <div class="status-badge status-<%= invoice.status.toLowerCase() %>">
          <%= invoice.status %>
        </div>
      </div>
    </div>

    <div class="parties">
      <div class="party">
        <div class="party-title">Bill To</div>
        <div class="party-name"><%= invoice.billTo?.clientName || '' %></div>
        <div class="party-details">
          <%= invoice.billTo?.address || '' %><br/>
          <%= invoice.billTo?.email || '' %><br/>
          <%= invoice.billTo?.phone || '' %>
        </div>
      </div>
      
      <div class="party">
        <div class="party-title">Payment Terms</div>
        <div class="party-name"><%= invoice.paymentTerms || 'Net 30' %></div>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th class="center">Quantity</th>
          <th class="right">Unit Price</th>
          <th class="right">Amount</th>
        </tr>
      </thead>
      <tbody>
        <% (invoice.items || []).forEach(function(item){ %>
          <tr>
            <td><%= item.name %></td>
            <td class="center"><%= item.quantity %></td>
            <td class="right">$<%= Number(item.unitPrice || 0).toFixed(2) %></td>
            <td class="right">$<%= Number(item.total || 0).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="totals">
      <div class="totals-box">
        <div class="total-row">
          <span>Subtotal</span>
          <span>$<%= Number(invoice.subTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row">
          <span>Tax</span>
          <span>$<%= Number(invoice.taxTotal||0).toFixed(2) %></span>
        </div>
        <div class="total-row final">
          <span>Total Due</span>
          <span>$<%= Number(invoice.total||0).toFixed(2) %></span>
        </div>
      </div>
    </div>

    <% if (invoice.notes) { %>
      <div class="notes">
        <div class="notes-title">Notes</div>
        <div class="notes-content"><%= invoice.notes %></div>
      </div>
    <% } %>
  </div>
</body>
</html>